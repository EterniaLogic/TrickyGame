<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout"
    android:background="@drawable/background"
    android:visibility="visible">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/questionImage"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/timer_question"
        android:visibility="visible" />

    <TextView
        android:id="@+id/livesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:singleLine="false"
        android:textColor="#ff0000"
        android:visibility="visible"
        android:textSize="20dp"
        android:textIsSelectable="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wrongBtn"
        android:layout_below="@+id/livesText"
        android:layout_marginLeft="56dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="67dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="72dp"
        android:layout_marginEnd="72dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@null"
        android:onClick="isWrong" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stopBtn"
        android:layout_marginLeft="92dp"
        android:layout_marginStart="92dp"
        android:layout_below="@+id/livesText"
        android:layout_alignLeft="@+id/wrongBtn"
        android:layout_alignStart="@+id/wrongBtn"
        android:layout_alignRight="@+id/wrongBtn"
        android:layout_alignEnd="@+id/wrongBtn"
        android:layout_marginRight="252dp"
        android:layout_marginEnd="252dp"
        android:layout_alignBottom="@+id/wrongBtn"
        android:layout_marginBottom="295dp"
        android:background="@null"
        android:onClick="isRight" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timer"
        android:textSize="20sp"
        android:text="\n00:30 "
        android:textColor="#010101"
        android:layout_alignTop="@+id/wrongBtn"
        android:layout_alignRight="@+id/wrongBtn"
        android:layout_alignEnd="@+id/wrongBtn"
        android:layout_marginRight="203dp"
        android:layout_marginEnd="203dp"
        android:layout_alignBottom="@+id/wrongBtn"
        android:layout_marginBottom="65dp" />


</RelativeLayout>