<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="team5.trickygame.MainMenu">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="47dp"
        android:background="@drawable/title" />

    <ImageView
        android:id="@+id/startquiz_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/leaderboards_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/tqstartquiz"
        android:clickable="true"
        android:onClick="startGame" />

    <ImageView
        android:id="@+id/options_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/quit_button"
        android:layout_alignBottom="@+id/startquiz_button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/startquiz_button"
        android:background="@mipmap/tqsound"
        android:clickable="true"
        android:minWidth="250dp"
        android:onClick="goToOptions"
        android:paddingBottom="10dp" />

    <ImageView
        android:id="@+id/quit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/leaderboards_button"
        android:background="@drawable/tqcredits"
        android:clickable="true"
        android:minWidth="250dp"
        android:onClick="goToCredits"
        android:paddingTop="10dp" />

    <ImageView
        android:id="@+id/leaderboards_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/tqleaderboards"
        android:clickable="true"
        android:onClick="goToLeaderboards"
        android:paddingTop="10dp" />

</RelativeLayout>
