<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@mipmap/menubackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="team5.trickygame.MainMenu">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="47dp"
        android:background="@mipmap/gamelogo" />

    <ImageView
        android:id="@+id/startquiz_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView"
        android:layout_marginStart="43dp"
        android:layout_marginTop="27dp"
        android:background="@mipmap/start_quiz" />

    <ImageView
        android:id="@+id/options_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/startquiz_button"
        android:layout_marginEnd="95dp"
        android:background="@mipmap/options_button" />

    <ImageView
        android:id="@+id/quit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/options_button"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="35dp"
        android:background="@mipmap/exit_button" />

    <ImageView
        android:id="@+id/leaderboards_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/startquiz_button"
        android:layout_alignTop="@+id/quit_button"
        android:layout_marginLeft="110dp"
        android:layout_marginStart="50dp"
        android:background="@mipmap/leaderboards_button" />

</RelativeLayout>
