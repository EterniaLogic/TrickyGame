<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="team5.trickygame.questions.Question5"
    android:background="@drawable/background">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="February"
        android:id="@+id/topleftbtn"
        android:minHeight="70dp"
        android:minWidth="250dp"
        android:textSize="40sp"
        android:textColor="#000000"
        android:maxHeight="70dp"
        android:layout_marginLeft="20dp"

        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:onClick="isWrong" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="July"
        android:id="@+id/botleftbtn"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/topleftbtn"
        android:layout_marginBottom="25dp"
        android:layout_alignStart="@+id/topleftbtn"
        android:minHeight="70dp"
        android:textSize="40sp"
        android:textColor="#000000"

        android:onClick="isWrong" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="March"
        android:id="@+id/toprightbtn"
        android:minWidth="250dp"
        android:minHeight="70dp"
        android:textSize="40sp"
        android:textColor="#000000"

        android:maxHeight="70dp"
        android:layout_marginLeft="20dp"
        android:layout_alignTop="@+id/topleftbtn"
        android:layout_alignParentEnd="true"
        android:onClick="isWrong" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All"
        android:id="@+id/botrightbtn"
        android:layout_alignTop="@+id/botleftbtn"
        android:layout_alignStart="@+id/toprightbtn"
        android:layout_alignBottom="@+id/botleftbtn"
        android:layout_alignEnd="@+id/toprightbtn"
        android:textSize="40sp"
        android:textColor="#000000"

        android:visibility="visible"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:onClick="isRight" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/livesText"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Which month(s) have 28 days?"
        android:id="@+id/textView14"
        android:textSize="40sp"
        android:textColor="#000000"
        android:layout_below="@+id/livesText"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
