<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="team5.trickygame.questions.Question4"
    android:background="@drawable/background"
    android:visibility="visible">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/questionImage"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/cup_question"
        android:visibility="visible" />

    <TextView
        android:id="@+id/livesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:singleLine="false"
        android:textColor="#ff0000"
        android:visibility="visible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cup1Btn"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="78dp"
        android:layout_marginTop="116dp"
        android:visibility="visible"
        android:layout_marginRight="494dp"
        android:layout_marginEnd="494dp"
        android:background="@null"
        android:onClick="check"
        android:layout_alignRight="@+id/questionImage"
        android:layout_alignEnd="@+id/questionImage"
        android:layout_below="@+id/livesText"
        android:layout_alignLeft="@+id/questionImage"
        android:layout_alignStart="@+id/questionImage"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cup2Btn"
        android:layout_marginRight="343dp"
        android:layout_marginEnd="343dp"
        android:layout_marginLeft="162dp"
        android:layout_marginStart="162dp"
        android:visibility="visible"
        android:background="@null"
        android:onClick="check"
        android:layout_alignLeft="@+id/questionImage"
        android:layout_alignStart="@+id/questionImage"
        android:layout_alignTop="@+id/cup1Btn"
        android:layout_marginTop="30dp"
        android:layout_alignBottom="@+id/questionImage"
        android:layout_alignRight="@+id/questionImage"
        android:layout_alignEnd="@+id/questionImage"
        android:layout_marginBottom="24dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cup3Btn"
        android:layout_marginLeft="179dp"
        android:layout_marginStart="179dp"
        android:layout_marginRight="214dp"
        android:layout_marginEnd="214dp"
        android:visibility="visible"
        android:background="@null"
        android:onClick="check"
        android:layout_alignBottom="@+id/cup1Btn"
        android:layout_alignLeft="@+id/cup2Btn"
        android:layout_alignStart="@+id/cup2Btn"
        android:layout_alignTop="@+id/cup1Btn"
        android:layout_alignRight="@+id/questionImage"
        android:layout_alignEnd="@+id/questionImage" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cup4Btn"
        android:layout_marginTop="105dp"
        android:visibility="visible"
        android:background="@null"
        android:onClick="check"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/livesText"
        android:layout_toEndOf="@+id/wordBtn"
        android:layout_alignBottom="@+id/cup2Btn"
        android:layout_toRightOf="@+id/wordBtn"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wordBtn"
        android:layout_marginRight="54dp"
        android:layout_marginEnd="54dp"
        android:layout_marginLeft="109dp"
        android:layout_marginStart="109dp"
        android:visibility="visible"
        android:onClick="check"
        android:background="@null"
        android:layout_marginBottom="54dp"
        android:layout_below="@+id/livesText"
        android:layout_above="@+id/cup3Btn"
        android:layout_alignLeft="@+id/cup2Btn"
        android:layout_alignStart="@+id/cup2Btn"
        android:layout_alignRight="@+id/cup3Btn"
        android:layout_alignEnd="@+id/cup3Btn" />

</RelativeLayout>