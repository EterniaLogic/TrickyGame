<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout"
    android:background="@drawable/background"
    android:visibility="visible">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/questionImage"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/cup_question"
        android:visibility="visible" />

    <TextView
        android:id="@+id/livesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:singleLine="false"
        android:textColor="#ff0000"
        android:visibility="visible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cup1Btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="78dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="151dp"
        android:visibility="visible"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="466dp"
        android:layout_marginEnd="466dp"
        android:background="@null"
        android:onClick="check" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cup2Btn"
        android:layout_marginBottom="38dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="325dp"
        android:layout_marginEnd="325dp"
        android:layout_alignTop="@+id/cup1Btn"
        android:layout_alignLeft="@+id/cup1Btn"
        android:layout_alignStart="@+id/cup1Btn"
        android:layout_marginLeft="123dp"
        android:layout_marginStart="123dp"
        android:visibility="visible"
        android:background="@null"
        android:onClick="check" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cup3Btn"
        android:layout_marginLeft="141dp"
        android:layout_marginStart="141dp"
        android:layout_alignTop="@+id/cup2Btn"
        android:layout_marginRight="196dp"
        android:layout_marginEnd="196dp"
        android:layout_alignLeft="@+id/cup2Btn"
        android:layout_alignStart="@+id/cup2Btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/cup1Btn"
        android:layout_marginBottom="40dp"
        android:visibility="visible"
        android:background="@null"
        android:onClick="check" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cup4Btn"
        android:layout_marginRight="35dp"
        android:layout_marginEnd="35dp"
        android:layout_alignBottom="@+id/cup2Btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="131dp"
        android:layout_marginStart="131dp"
        android:layout_marginTop="134dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/cup3Btn"
        android:layout_alignStart="@+id/cup3Btn"
        android:visibility="visible"
        android:background="@null"
        android:onClick="check" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wordBtn"
        android:layout_alignRight="@+id/cup3Btn"
        android:layout_alignEnd="@+id/cup3Btn"
        android:layout_marginRight="45dp"
        android:layout_marginEnd="45dp"
        android:layout_alignLeft="@+id/cup2Btn"
        android:layout_alignStart="@+id/cup2Btn"
        android:layout_marginLeft="78dp"
        android:layout_marginStart="78dp"
        android:visibility="visible"
        android:onClick="check"
        android:background="@null"
        android:layout_below="@+id/livesText"
        android:layout_marginBottom="76dp"
        android:layout_above="@+id/cup2Btn" />

</RelativeLayout>